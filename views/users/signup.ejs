<% layout("/layouts/boilerplate") %>
<h1 class="col-6 offset-3" >SignUp on WanderLust</h1>
<div class="row">
            <div class="col-8 offset-2">
                <form action="/signup" method="post" class="needs-validation" novalidate>
                     <div class="mb-3">
                     <label for="username" class="form-label">UserName</label>
                    <input type="text" id="username" class="form-control" name="username" required>
                    <div class="valid-feedback">looks good</div>   <!--success text -->
                    <div class="invalid-feedback">please enter the username correctly</div> 
                   </div>

                    <div class="mb-3">
                     <label for="email" class="form-label">Email</label>
                    <input type="text" id="email" class="form-control" name="email" required>
                    <div class="valid-feedback">looks good</div>   <!--success text -->
                    <div class="invalid-feedback">please enter the email correctly</div>
                   </div>

                    <div class="mb-3">
                     <label for="password" class="form-label">Password</label>
                    <input type="text" id="password" class="form-control" name="password" required>
                    <div class="invalid-feedback">password is wrong</div>
                   </div>

                   <button class="btn btn-success">SignUp</button>
                </form>
            </div>
</div>